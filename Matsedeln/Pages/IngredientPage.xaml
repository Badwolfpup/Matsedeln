<Page x:Class="Matsedeln.Pages.IngredientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:inter="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:Matsedeln.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IngredientPage">

    <Grid Background="#FFFDFDFD">
        <ItemsControl x:Name="GoodsItemsControl" ItemsSource="{Binding GoodsViewSource.View}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"></WrapPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Transparent" BorderThickness="3" Margin="5" Padding="5" CornerRadius="10">
                        <inter:Interaction.Triggers>
                            <inter:EventTrigger EventName="MouseLeftButtonDown">
                                <inter:InvokeCommandAction 
                                   Command="{Binding DataContext.SelectBorderCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                   CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=.}"/>
                            </inter:EventTrigger>
                        </inter:Interaction.Triggers>
                        <StackPanel>
                            <Image Width="100" Height="100" Source="{Binding ImagePath}"></Image>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
