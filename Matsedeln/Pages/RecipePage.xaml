<Page x:Class="Matsedeln.Pages.RecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Matsedeln.Pages"
      xmlns:inter="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecipePage">
    <Page.Resources>
        <local:RecipeNameConverter x:Key="RecipeNameConverter"></local:RecipeNameConverter>
    </Page.Resources>
    <Grid Background="Cornsilk">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="RecipeItemsControl" ItemsSource="{Binding RecipesViewSource.View}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Transparent" BorderThickness="3" Width="200" Margin="5" Padding="5" CornerRadius="10" MouseDown="Select_Border">
                            <inter:Interaction.Triggers>
                                <inter:EventTrigger EventName="MouseRightButtonDown">
                                    <inter:InvokeCommandAction Command="{Binding DataContext.EditRecipeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}"/>
                                </inter:EventTrigger>
                            </inter:Interaction.Triggers>
                            <StackPanel ToolTipService.InitialShowDelay="1000">
                                <StackPanel.ToolTip>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel.ToolTip>
                                <Image Width="100" Height="100" Source="{Binding ImagePath}"></Image>
                                <TextBlock Text="{Binding Name, Converter={StaticResource RecipeNameConverter}}" HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
