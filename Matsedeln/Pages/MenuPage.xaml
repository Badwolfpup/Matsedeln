<Page x:Class="Matsedeln.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Matsedeln.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">
    <Page.Resources>
        <local:DateConverter x:Key="DateConverter"></local:DateConverter>
    </Page.Resources>
    <Grid Background="#FFFDFDFD">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
            <Button Grid.Column="0" Content="&lt;" Style="{StaticResource BtnNoMax}" Width="30" Command="{Binding PrevMonthCommand}"></Button>
            <TextBlock Margin="20 0 20 0" HorizontalAlignment="Center" Grid.Column="1" FontSize="20" Text="{Binding Time}"/>

            <Button Grid.Column="2" Content="&gt;" Style="{StaticResource BtnNoMax}" Width="30" Command="{Binding NextMonthCommand}"></Button>
            </StackPanel>

        <ItemsControl ItemsSource="{Binding MenuEntrySource.View}" Grid.Row="1">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid  Columns="7" Rows="6"></UniformGrid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightBlue" BorderThickness="3" CornerRadius="20">
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Date, Converter={StaticResource DateConverter}}"></TextBlock>     
                            <StackPanel Margin="5" Background="Cornsilk" Orientation="Horizontal">
                                <Image Margin="5" Width="40" Height="40" Stretch="Fill" Source="{Binding LunchRecipe.ImagePath}"></Image>
                                <TextBlock Text="{Binding LunchRecipe.Name}"/>
                            </StackPanel>
                            <StackPanel Margin="5 0 5 0" Background="CornflowerBlue" Orientation="Horizontal">
                                <Image Margin="5" Width="40" Height="40" Stretch="Fill" Source="{Binding DinnerRecipe.ImagePath}"></Image>
                                <TextBlock Text="{Binding DinnerRecipe.Name}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
                     
    </Grid>
</Page>
