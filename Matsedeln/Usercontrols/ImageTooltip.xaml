<UserControl x:Class="Matsedeln.Usercontrols.ImageTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Matsedeln.Usercontrols"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
            <Image Grid.Column="0" Grid.Row="0" Source="{Binding ElementName=root, Path=ImageSource, TargetNullValue={x:Null}}" Width="200" Height="200" RenderOptions.BitmapScalingMode="HighQuality" />
        <TextBlock Text="{Binding ElementName=root, Path=RecipeName}"/>
    </StackPanel>
</UserControl>
