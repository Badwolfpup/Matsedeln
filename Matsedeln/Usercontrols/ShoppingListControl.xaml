<UserControl x:Class="Matsedeln.Usercontrols.ShoppingListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Matsedeln.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="LocalBoolToVis"></BooleanToVisibilityConverter>
    </UserControl.Resources>
    <Grid Background="#FFFDFDFD" Margin="10">

        <StackPanel Visibility="{Binding ShowIngredients, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource LocalBoolToVis}}">
            <Border BorderBrush="Transparent"  BorderThickness="1" Margin="0,20,0,20" MinHeight="100">
                <ItemsControl ItemsSource="{Binding ShoppingList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="50" Height="50" Source="{Binding Good.Imagepath}"></Image>
                                <TextBlock Text="{Binding QuantityInGram}" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Unit}" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Good.Name}" Margin="0 0 5 0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Skapa shoppinglista" Width="100" Click="MakeShoppinglist_Click" />
                <Button Content="Avbryt" Width="100" Click="AbortIngredientlist_Click" />
            </StackPanel>
        </StackPanel>
        <StackPanel Visibility="{Binding ShowShoppinglist, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource LocalBoolToVis}}">
            <Border BorderBrush="Transparent"  BorderThickness="1" Margin="0,20,0,20" MinHeight="100">
                <ItemsControl ItemsSource="{Binding ShoppingList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="50" Height="50" Source="{Binding Good.Imagepath}"></Image>
                                <TextBlock Text="{Binding Quantity}" Margin="0 0 10 0"/>
                                <ComboBox x:Name="UnitComboBox" ItemsSource="{Binding UnitOptions}" Height="40" SelectedIndex="0" Width="40" HorizontalAlignment="Left" SelectionChanged="UnitComboBox_SelectionChanged"/>
                                <TextBlock Text="{Binding Good.Name}" Margin="10 0 5 0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Kopiera shoppinglista" Width="100" Click="CopyShoppinglist_Click" />
                <Button Content="Avbryt" Width="100" Click="AbortShoppinglist_Click" />
            </StackPanel>        
        </StackPanel>
    </Grid>
</UserControl>
