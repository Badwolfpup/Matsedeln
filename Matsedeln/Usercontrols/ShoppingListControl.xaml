<UserControl x:Class="Matsedeln.Usercontrols.ShoppingListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Matsedeln.Usercontrols"
             xmlns:inter="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="LocalBoolToVis"></BooleanToVisibilityConverter>
    </UserControl.Resources>
    <Grid Background="#FFFDFDFD" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock >Inköpslista</TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="1" Visibility="{Binding ShowIngredients, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource LocalBoolToVis}}">
            <Border BorderBrush="Transparent"  BorderThickness="1" Margin="0,20,0,20" MinHeight="100">
                <ItemsControl ItemsSource="{Binding Ad.ShoppingList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="50" Height="50" Source="{Binding Good.ImagePath}"></Image>
                                <TextBlock Text="{Binding QuantityInGram}" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Unit}" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding Good.Name}" Margin="0 0 5 0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Skapa shoppinglista" Width="100" Click="MakeShoppinglist_Click" />
                <Button Content="Avbryt" Width="100" Command="{Binding AbortIngredientlistCommand}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Visibility="{Binding ShowShoppinglist, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource LocalBoolToVis}}">
            <Border BorderBrush="Transparent"  BorderThickness="1" Margin="0,20,0,20" MinHeight="100">
                <ItemsControl ItemsSource="{Binding Ad.ShoppingList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="50" Height="50" Source="{Binding Good.ImagePath}"></Image>
                                <TextBlock Text="{Binding Quantity}" Margin="0 0 10 0"/>
                                <ComboBox x:Name="UnitComboBox" ItemsSource="{Binding UnitOptions}" SelectedItem="{Binding Unit}" Height="40" Width="40" HorizontalAlignment="Left">
                                    <inter:Interaction.Triggers>
                                        <inter:EventTrigger EventName="SelectionChanged">
                                            <inter:InvokeCommandAction Command="{Binding DataContext.UnitComboBoxCommand, RelativeSource={RelativeSource AncestorType=ItemsControl, AncestorLevel=2}}" CommandParameter="{Binding}" />
                                        </inter:EventTrigger>
                                    </inter:Interaction.Triggers>
                                </ComboBox>
                                <TextBlock Text="{Binding Good.Name}" Margin="10 0 5 0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Kopiera shoppinglista" Width="100" Command="{Binding CopyShoppinglistCommand}" />
                <Button Content="Avbryt" Width="100" Command="{Binding AbortIngredientlistCommand}" />
            </StackPanel>        
        </StackPanel>
    </Grid>
</UserControl>
