<UserControl x:Class="Matsedeln.Usercontrols.NewRecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:inter="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Matsedeln.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="ShowAddIngredients"/>
    </UserControl.Resources>

    <Grid Background="#FFFDFDFD">
        <StackPanel>
            <Button Grid.Column="0"  Command="{Binding ShowAddGoodsUserControlCommand}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xF8AA;"/>
                        <TextBlock Text="  vara" FontWeight="Bold"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <TextBlock  Text="Receptets namn:" HorizontalAlignment="Center"/>
            <TextBox TabIndex="0" HorizontalAlignment="Center" Text="{Binding RecipeName, UpdateSourceTrigger=PropertyChanged}" x:Name="RecipeNameInput" />
            <Image 
                x:Name="BoundImage"
                Source="{Binding RecipeImage}"
                Stretch="Uniform"
                HorizontalAlignment="Center"
                Width="250" Height="250" 
                MinHeight="40" MinWidth="40"
                Margin="0 15 0 10">
                <inter:Interaction.Triggers>
                    <inter:EventTrigger EventName="MouseLeftButtonDown">
                        <inter:InvokeCommandAction Command="{Binding ImageMouseDownCommand}"/>
                    </inter:EventTrigger>
                </inter:Interaction.Triggers>
            </Image>
            <StackPanel Visibility="{Binding ShowRest, Converter={StaticResource ShowAddIngredients}}">
                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">

                    <TextBlock Margin="0 0 20 0" Text="{Binding NewIngredient.Good.Name}"/>
                    <ComboBox x:Name="UnitComboBox" ItemsSource="{Binding NewIngredient.UnitOptions}" SelectedItem="{Binding NewIngredient.Unit}" Height="40" Width="130" HorizontalAlignment="Left">

                    </ComboBox>
                    <TextBox TabIndex="1" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="70" PreviewTextInput="CheckIfDigit_preview"/>
                </StackPanel>
                <Button Content="{Binding AddingButtonText}" Width="100" HorizontalAlignment="Left" Command="{Binding AddIngredientCommand}" />
                <Border BorderBrush="Transparent" BorderThickness="1" Margin="0,20,0,20" MinHeight="100">
                    <ItemsControl x:Name="RecList" ItemsSource="{Binding NewRecipe.Ingredientlist}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <inter:Interaction.Triggers>
                                        <inter:EventTrigger EventName="MouseLeftButtonDown">
                                            <inter:InvokeCommandAction Command="{Binding DataContext.SelectIngredientCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}"></inter:InvokeCommandAction>
                                        </inter:EventTrigger>
                                    </inter:Interaction.Triggers>
                                    <Image Width="50" Height="50" Source="{Binding Good.ImagePath}"></Image>
                                    <TextBlock Text="{Binding}">

                                    </TextBlock>
                                    <Button Content="X" Width="30" MinWidth="30" Command="{Binding DataContext.RemoveIngredientCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                    <Button Content="Lägg till recept" Width="100" Command="{Binding AddNewRecipeCommand}" />
                    <Button Content="Avbryt" Width="100" Command="{Binding AbortNewRecipeCommand}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
