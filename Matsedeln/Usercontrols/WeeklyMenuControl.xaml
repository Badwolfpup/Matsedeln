<UserControl x:Class="Matsedeln.Usercontrols.WeeklyMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:inter="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Matsedeln.Usercontrols"
             xmlns:models="clr-namespace:Matsedeln.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650">
    <UserControl.Resources>
        <local:MergeValuesConverter x:Key="MultiValueConverter"></local:MergeValuesConverter>
    </UserControl.Resources>
    <Grid Background="#FFFDFDFD">
        
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="&lt;" Style="{StaticResource BtnNoMax}" Width="30" Command="{Binding PrevWeekCommand}"></Button>
                <TextBlock Grid.Column="1" FontSize="20" Text="{Binding WeekAndDate}"/>

                <Button Grid.Column="2" Content="&gt;" Style="{StaticResource BtnNoMax}" Width="30" Command="{Binding NextWeekCommand}"></Button>
            </Grid>
            <ItemsControl Margin="0 20 0 0" ItemsSource="{Binding MenuListSource.View}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="PaleGoldenrod">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Lunch" HorizontalAlignment="Right" Grid.Column="0"/>
                                    <ComboBox Margin="5" Grid.Column="1" SelectedIndex="0" SelectedItem="{Binding LunchRecipe, Mode=TwoWay}" ItemsSource="{Binding DataContext.LocalList, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                        <inter:Interaction.Triggers>
                                            <inter:EventTrigger EventName="SelectionChanged">
                                                <inter:InvokeCommandAction Command="{Binding DataContext.LunchSelectionChangedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl, AncestorLevel=2}}">
                                                    <inter:InvokeCommandAction.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                            <Binding Path="."/>
                                                            <Binding Path="SelectedItem" RelativeSource="{RelativeSource AncestorType=ComboBox}"/>
                                                        </MultiBinding>
                                                    </inter:InvokeCommandAction.CommandParameter>
                                                </inter:InvokeCommandAction>
                                            </inter:EventTrigger>
                                        </inter:Interaction.Triggers>

                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="50" Height="50" Source="{Binding ImagePath}"></Image>
                                                    <TextBlock Text="{Binding Name}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </Grid>
                                <Grid Grid.Row="1" Background="LightCoral">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Text="Middag" HorizontalAlignment="Right" Grid.Column="0"/>
                                    <ComboBox Margin="5" Grid.Column="1" SelectedIndex="0" SelectedItem="{Binding DinnerRecipe, Mode=TwoWay}" ItemsSource="{Binding DataContext.LocalList, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                        <inter:Interaction.Triggers>
                                            <inter:EventTrigger EventName="SelectionChanged">
                                                <inter:InvokeCommandAction Command="{Binding DataContext.DinnerSelectionChangedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl, AncestorLevel=2}}">
                                                    <inter:InvokeCommandAction.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                            <Binding Path="."/>
                                                            <Binding Path="SelectedItem" RelativeSource="{RelativeSource AncestorType=ComboBox}"/>
                                                        </MultiBinding>
                                                    </inter:InvokeCommandAction.CommandParameter>
                                                </inter:InvokeCommandAction>
                                            </inter:EventTrigger>
                                        </inter:Interaction.Triggers>
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="50" Height="50" Source="{Binding ImagePath}"></Image>
                                                    <TextBlock Text="{Binding Name}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
