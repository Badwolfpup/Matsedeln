<UserControl x:Class="Matsedeln.Usercontrols.WeeklyMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:inter="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Matsedeln.Usercontrols"
             xmlns:converter="clr-namespace:Matsedeln.Converters"
             xmlns:usercontrols="clr-namespace:Matsedeln.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650">
    <UserControl.Resources>
        <local:MergeValuesConverter x:Key="MultiValueConverter"></local:MergeValuesConverter>
        <local:FindSelectedRecipeConverter x:Key="FindSelectedRecipeConverter"></local:FindSelectedRecipeConverter>
        <converter:ImageUrlConverter x:Key="ImageUrlConverter"></converter:ImageUrlConverter>
    </UserControl.Resources>
    <inter:Interaction.Triggers>
        <inter:EventTrigger EventName="Loaded">
            <inter:InvokeCommandAction Command="{Binding LoadWeeklyMenuCommand}"/>
        </inter:EventTrigger>
    </inter:Interaction.Triggers>
    <Grid Background="#FFFDFDFD">
        
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="&lt;" Style="{StaticResource BtnNoMax}" Width="30" Command="{Binding PrevWeekCommand}"></Button>
                <TextBlock Grid.Column="1" FontSize="20" Text="{Binding WeekAndDate}"/>

                <Button Grid.Column="2" Content="&gt;" Style="{StaticResource BtnNoMax}" Width="30" Command="{Binding NextWeekCommand}"></Button>
            </Grid>
            <Grid x:Name="LoadingOverlay" Grid.Row="2" Visibility="{Binding IsLoading}" Background="#80000000">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <usercontrols:LoadingSpinner Width="80" Height="80" SpinnerColor="White"/>
                    <TextBlock Text="Loading data..." 
                      Foreground="White" 
                      FontSize="16" 
                      Margin="0,20,0,0"
                      HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <ItemsControl Margin="0 20 0 0" ItemsSource="{Binding MenuEntrySource.View}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Height="50" Grid.Row="0" Background="Cornsilk" ToolTipService.InitialShowDelay="2000" ToolTipService.ShowDuration="3000">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.ToolTip>
                                        <local:ImageTooltip ImageSource="{Binding LunchRecipe.ImagePath, Converter={StaticResource ImageUrlConverter}}"/>
                                    </Grid.ToolTip>
                                    <TextBlock Text="Lunch" HorizontalAlignment="Right" Grid.Column="0"/>
                                    <Button Grid.Column="1" Background="PapayaWhip" Foreground="Black" Command="{Binding DataContext.LunchChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Margin="0 0 10 0" Width="30" Height="30" Stretch="Fill" Source="{Binding LunchRecipe.ImagePath, Converter={StaticResource ImageUrlConverter}}"></Image>
                                                <TextBlock Text="{Binding LunchRecipe.Name}"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <Button Grid.Column="2" Content="X" Width="30" MinWidth="15" Command="{Binding DataContext.RemoveLunchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>

                                </Grid>
                                <Grid Height="50" Grid.Row="1" Background="CornflowerBlue" ToolTipService.InitialShowDelay="2000" ToolTipService.ShowDuration="3000">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.ToolTip>
                                        <local:ImageTooltip ImageSource="{Binding DinnerRecipe.ImagePath, Converter={StaticResource ImageUrlConverter}}"/>
                                    </Grid.ToolTip>
                                    <TextBlock  Text="Middag" HorizontalAlignment="Right" Grid.Column="0"/>
                                    <Button Grid.Column="1" Background="LightSkyBlue" Foreground="Black" Command="{Binding DataContext.DinnerChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Margin="0 0 10 0" Width="30" Height="30" Stretch="Fill" Source="{Binding DinnerRecipe.ImagePath, Converter={StaticResource ImageUrlConverter}}"></Image>
                                                <TextBlock Text="{Binding DinnerRecipe.Name}"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <Button Grid.Column="2" Content="X" Width="30" MinWidth="15" Command="{Binding DataContext.RemoveDinnerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>

                                </Grid>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
