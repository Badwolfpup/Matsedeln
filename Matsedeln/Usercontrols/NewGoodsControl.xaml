<UserControl x:Class="Matsedeln.Usercontrols.NewGoodsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Matsedeln.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.InputBindings>
        <KeyBinding Key="V" Modifiers="Control" Command="ApplicationCommands.Paste" />
    </UserControl.InputBindings>

    <Grid Background="#FFFDFDFD" Margin="10">
        <StackPanel>
            <Image x:Name="BindadBild"   
                Grid.Row="0" 
                Stretch="Uniform"
                HorizontalAlignment="Center"
                Width="250" Height="250" 
                MinHeight="40" MinWidth="40" 
                MouseDown="Image_MouseDown">
            </Image>
            <StackPanel>
                <TextBlock Text="Namn:"/>
                <TextBox x:Name="NameInput"/>

                <TextBlock Text="Gram per dl:"/>
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="CboxGperDL" VerticalContentAlignment="Center">

                    </CheckBox>
                    <TextBox x:Name="GperDLInput" Width="75" IsEnabled="{Binding ElementName=CboxGperDL, Path=IsChecked}" PreviewTextInput="CheckIfDigit_preview"/>
                </StackPanel>
                <TextBlock Text="Gram per st:"/>
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="CboxGperST" VerticalContentAlignment="Center"></CheckBox>
                    <TextBox x:Name="GperSTInput" Width="75" IsEnabled="{Binding ElementName=CboxGperST, Path=IsChecked}" PreviewTextInput="CheckIfDigit_preview"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Lägg till vara" Width="100" Click="AddGoodsToDB_Click" />
                    <Button Content="Avbryt" Width="100" Click="AbortAddGoods_Click" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
