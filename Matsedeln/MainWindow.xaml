<Window x:Class="Matsedeln.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matsedeln"
        xmlns:pages="clr-namespace:Matsedeln.Pages"
        xmlns:inter="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">

        <Window.CommandBindings>
            <CommandBinding Command="ApplicationCommands.Paste" Executed="PasteExecuted" />
        </Window.CommandBindings>

        <Window.Resources>
                <BooleanToVisibilityConverter x:Key="ShowUserControl"/>
        </Window.Resources>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                <Button Content="Ingrediens" Command="{Binding ShowIngredientsPageCommand}"></Button>
                <TextBox IsEnabled="{Binding Ad.IsFilterTextboxEnabled}" Margin="15 0 15 0" Text="{Binding Ad.FilterText, UpdateSourceTrigger=PropertyChanged}">
                    <inter:Interaction.Triggers>
                        <inter:EventTrigger EventName="TextChanged">
                            <inter:InvokeCommandAction Command="{Binding FilterGoodsCommand, UpdateSourceTrigger=PropertyChanged}"/>
                        </inter:EventTrigger>
                    </inter:Interaction.Triggers>
                </TextBox>
                <Button Content="Recept" Command="{Binding ShowRecipesPageCommand}"></Button>
                <Button Content="Kalender" Command="{Binding ShowMenuPageCommand}" ></Button>
            </StackPanel>
            <Button Grid.Column="2" HorizontalAlignment="Right" Width="35" Height="35" Style="{StaticResource BtnNoMax}" 
                   BorderBrush="Transparent" BorderThickness="1" Background="PaleVioletRed" Command="{Binding DeleteGoodOrRecipeCommand}">
                <Button.Content>
                    <TextBlock FontSize="16" FontFamily="Segoe MDL2 Assets" Text="&#xF8AA;"></TextBlock>
                </Button.Content>
                <Button.ToolTip>
                    <ToolTip ToolTipService.InitialShowDelay="200" ToolTipService.ShowDuration="2000">
                        <TextBlock>Radera</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        <ContentControl Content="{Binding Ad.CurrentUserControl}" Grid.Row="1" Grid.Column="0" x:Name="AddContentControl"/>
        <Frame Content="{Binding Ad.CurrentPage}" Grid.Row="1" Grid.Column="1" x:Name="ContentFrame" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"></Frame>
        </Grid>

</Window>
