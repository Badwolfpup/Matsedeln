<Window x:Class="Matsedeln.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matsedeln"
        xmlns:pages="clr-namespace:Matsedeln.Pages"
        xmlns:inter="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize" Height="1080" Width="1920" WindowStartupLocation="CenterScreen">

        <Window.CommandBindings>
            <CommandBinding Command="ApplicationCommands.Paste" Executed="PasteExecuted" />
        </Window.CommandBindings>

        <Window.Resources>
                <BooleanToVisibilityConverter x:Key="ShowUserControl"/>
        </Window.Resources>
        <Grid Margin="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


        <ContentControl Content="{Binding CurrentUserControl}" Grid.Column="0" x:Name="AddContentControl"/>
        <Frame Margin="10 5 0 0" Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" Grid.Column="1" x:Name="ContentFrame" Grid.ColumnSpan="2"></Frame>
        <StackPanel Grid.Column="1" Panel.ZIndex="100" IsHitTestVisible="False" x:Name="ToastContainer" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20"/>
        </Grid>

</Window>
